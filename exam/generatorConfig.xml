<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE generatorConfiguration PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
		"http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd" >
<generatorConfiguration >

	<!--1.修改为自己的mysql连接jar包:绝对路径地址；-->
	<classPathEntry location="D:\\software\\9-3-Maven\\repository\\mysql\\mysql-connector-java\\8.0.13\\mysql-connector-java-8.0.13.jar"/>

	<context id="context1" >
		<commentGenerator  >
			<property name="suppressAllComments" value="true" />
		</commentGenerator>
		<!--2.选择数据库的driverClass与connectionURL-->

		<jdbcConnection driverClass="com.mysql.cj.jdbc.Driver"
		connectionURL="jdbc:mysql://localhost:3306/java1313?useUnicode=true&amp;serverTimezone=GMT%2B8&amp;useSSL=false&amp;characterEncoding=UTF-8" userId="root" password="123456" />

		<!--3.生成实体类 指定包名 以及生成的绝对地址 （可以自定义地址，但是路径不存在不会自动创建  使用Maven生成在target目录下，会自动创建） -->
		<javaModelGenerator targetPackage="com.baidu.exam.model" targetProject="E:\projects\exam\src\main\java" >
			<property name="enableSubPackages" value="true"/> <!-- 如果true，MBG会根据catalog和schema来生成子包。如果false就会直接用targetPackage属性。默认为false -->
			<property name="trimStrings" value="true" /> <!-- 当数据库字段使用CHAR时，建议在<javaModelGenerator>中设 -->
		</javaModelGenerator>

		<!--4.生成Mapper映射文件地 址 -->
		<sqlMapGenerator targetPackage="com.baidu.exam.mapper"  targetProject="E:\projects\exam\src\main\java" />

		<!--5.生成Dao 接口文件 可以配置 type="XMLMAPPER"生成xml的dao实现 -->
		<javaClientGenerator targetPackage="com.baidu.exam.mapper" targetProject="E:\projects\exam\src\main\java" type="XMLMAPPER" />

		<!--6.配置哪些 表需要自动生成-->
		<table tableName="exam_items" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" />
		<table tableName="exam_paper" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" />
		<table tableName="exam_score" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" />
		<table tableName="exam_score_detail" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" />
		<table tableName="exam_user" enableCountByExample="true" enableUpdateByExample="true" enableDeleteByExample="true"
			   enableSelectByExample="true"   selectByExampleQueryId="true" />
	</context>
</generatorConfiguration>